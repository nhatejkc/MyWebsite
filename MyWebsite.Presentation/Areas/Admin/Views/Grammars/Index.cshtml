@model IEnumerable<MyWebsite.Core.Models.Grammar>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Ngữ pháp</h6>
    </div>
    <div class="card-body">
        <p>
            @Html.ActionLink("Tạo mới", "Create")
        </p>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã ngữ pháp</th>
                        <th>Mã bài học</th>
                        <th>Mô tả ngữ pháp</th>
                        <th>Chi tiết ngữ pháp</th>
                        <th>Thời gian đăng</th>
                        <th>Thời gian sửa</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.LessionId</td>
                            <td>@item.GrammarShortDescription</td>
                            <td>@item.GrammarDescription</td>
                            <td>@item.PostOn</td>
                            <td>@item.Modifie</td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-info fa fa-edit" })
                                @Html.ActionLink("Xóa", "DeleteItem", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger fa fa-trash" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

