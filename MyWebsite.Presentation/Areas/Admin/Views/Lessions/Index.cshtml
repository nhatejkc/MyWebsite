@model IEnumerable<MyWebsite.Core.Models.Lession>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Bài học</h6>
    </div>
    <div class="card-body">
        <p>
            @Html.ActionLink("Tạo mới", "Create")
        </p>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nội dung chính</th>
                        <th>Mô tả bài học</th>
                        <th>Hình ảnh</th>
                        <th>Thời gian đăng</th>
                        <th>Thời gian sửa</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MainConent</td>
                            <td>@item.LessionShortDescription</td>
                            <td><img src="@item.Images" width="100"/></td>
                            <td>@item.PostOn</td>
                            <td>@item.Modifie</td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-info fa fa-edit" })
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary fa fa-info-circle" })
                                @Html.ActionLink("Xóa", "DeleteItem", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger fa fa-trash" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
