@using MyWebsite.Core.Models
@model IEnumerable<MyWebsite.Core.Models.Question>
@{
    int count = 1, countR = 0;
}


@foreach (var question in Model)
{
    <div class="BlockQ" style="border: 1px solid #bdbdbd; width: 75%; border-radius: 4px; margin-top: 40px; background-color: #f0ffff; padding: 8px;">
        <div class="Question" style="padding: 2%;">
            <span class="label label-warning"> @string.Format("{0}{1}.", "Q", count)</span>
            <span id="@string.Format("{0}{1}", "ID_Q", count)" style="display:none;">@question.Id</span>
            <p style="display: inline; padding: 2%;" id="@string.Format("{0}{1}", "Q", count)">@Html.Raw(question.QuestionTitle)</p>
        </div>
        <div class="Choices" style="margin-left: 8%;">
            @foreach (var choice in question.QuestionItems)
            {
                <label class="radio-inline">
                    <input type="radio" name="@string.Format("{0}{1}", "inlineRadioOptions",count)" id="@string.Format("{0}{1}", "inlineRadio", countR)" value="@choice.Title" style="margin-left: -16px;"> @choice.Title
                </label><br />
                countR++;
            }
        </div> <!--END Choices-->

        <div id="@string.Format("{0}{1}{2}", "Ans","Q", count)">

        </div>
    </div> <!-- END BlockQ -->
    count++;
}
<span id="countQuections" style="display:none;">@count</span>
<button type="button" id="SubmitQuiz" class="btn btn-primary" style="margin-top: 10px;"><span class="glyphicon glyphicon-ok"></span> Kiểm tra </button>
<button type="button" id="Reset" class="btn btn-default" style="margin-top: 10px;"><span class="glyphicon glyphicon-ok">Làm lại</span></button>
