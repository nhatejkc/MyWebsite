                            <div class="course_head">
                                <img class="img-fluid" src="@item.Images" alt="" />
                            </div>
                            <div class="course_content">
                                <span class="price">@item.Id</span>
                                <h4 class="mb-3">
                                    @Html.ActionLink("Đi tới bài học", "LessionDetails", new { id = item.Id })
